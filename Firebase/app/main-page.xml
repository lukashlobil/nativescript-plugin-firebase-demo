<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <TabView>
    <TabView.items>
      <TabViewItem title="About">
        <TabViewItem.view>
          <ScrollView>
            <StackLayout cssClass="tab-content">
              <Image margin="10" src="~/res/telerik-logo.png" />
              <Label text="Firebase plugin demo" cssClass="title"/>
              <Label text="Create awesome realtime apps with Firebase. Make sure you provide your own Firebase URL in main-view-model.js" textWrap="true"/>
            </StackLayout>
          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
      <TabViewItem title="Demo">
        <TabViewItem.view>
          <ScrollView>
            <GridLayout columns="*, *" rows="auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto, auto" horizontalAlignment="stretch" cssClass="tab-content">

              <Button row="0" colSpan="2" text="init firebase - do this first" tap="{{ doInit }}" cssClass="button button-positive" />

              <Label row="1" colSpan="2" text="Remote Config" cssClass="subtitle" />

              <Button row="2" colSpan="2" text="get remote configuration" tap="{{ doGetRemoteConfig }}" cssClass="button" />

              <Label row="3" colSpan="2" text="Authentication" cssClass="subtitle" />

              <Button row="4" col="0" text="anonymous login" tap="{{ doLoginAnonymously }}" cssClass="button" />
              <Button row="4" col="1" text="passwd login" tap="{{ doLoginByPassword }}" cssClass="button" />

              <Button row="5" col="0" text="create pwd user" tap="{{ doCreateUser }}" cssClass="button" />
              <Button row="5" col="1" text="reset pwd" tap="{{ doResetPassword }}" cssClass="button" />

              <Button row="6" col="0" text="Google login" tap="{{ doLoginByGoogle }}" cssClass="button" />
              <Button row="6" col="1" text="Facebook login" tap="{{ doLoginByFacebook }}" cssClass="button" />

              <Button row="7" col="0" text="get current user" tap="{{ doGetCurrentUser }}" cssClass="button" />
              <Button row="7" col="1" text="del current user" tap="{{ doDeleteUser }}" cssClass="button" />

              <Label row="8" col="0" text="User email:" cssClass="message"/>
              <Label row="8" col="1" text="{{ useremail }}" cssClass="message" textWrap="true" />

              <Button row="9" colSpan="2" text="logout" tap="{{ doLogout }}" cssClass="button button-state" />

              <Label row="10" colSpan="2" text="Methods on path /users" cssClass="subtitle" />

              <Button row="11" col="0" text="auto-sync: ON" tap="{{ doKeepUsersInSyncOn }}" cssClass="button button-user" />
              <Button row="11" col="1"  text="auto-sync: OFF" tap="{{ doKeepUsersInSyncOff }}" cssClass="button button-user" />

              <Button row="12" col="0" text="add childlistener" tap="{{ doAddChildEventListenerForUsers }}" cssClass="button button-user" />
              <Button row="12" col="1"  text="store by push" tap="{{ doUserStoreByPush }}" cssClass="button button-user" />

              <Button row="13" col="0" text="query users once" tap="{{ doQueryUsers }}" cssClass="button button-user" />
              <Button row="13" col="1" text="remove path" tap="{{ doRemoveUsers }}" cssClass="button button-user" />

              <Button row="14" colSpan="2" text="remove childlistener" tap="{{ doRemoveChildEventListenerForUsers }}" cssClass="button button-user" />

              <Label row="15" colSpan="2" text="Methods on path /companies" cssClass="subtitle"/>

              <Button row="16" col="0" text="add valuelistener" tap="{{ doAddValueEventListenerForCompanies }}" cssClass="button button-company" />
              <Button row="16" col="1" text="store by setValue" tap="{{ doStoreCompaniesBySetValue }}" cssClass="button button-company" />

              <Button row="17" col="0" text="query with range" tap="{{ doQueryBulgarianCompanies }}" cssClass="button button-company" />
              <Button row="17" col="1" text="remove path" tap="{{ doRemoveCompanies }}" cssClass="button button-company" />

              <Button row="18" colSpan="2" text="remove valuelistener" tap="{{ doRemoveValueEventListenersForCompanies }}" cssClass="button button-company" />

              <Label row="19" col="0" text="Last update path:" cssClass="message"/>
              <Label row="19" col="1" text="{{ path }}" cssClass="message" textWrap="true" />

              <Label row="20" col="0" text="Type:" cssClass="message" />
              <Label row="20" col="1" text="{{ type }}" cssClass="message"/>

              <Label row="21" col="0" text="Key:" cssClass="message" />
              <Label row="21" col="1" text="{{ key }}" cssClass="message" textWrap="true" />

              <Label row="22" col="0" text="Value:" cssClass="message" />
              <Label row="22" col="1" text="{{ value }}" cssClass="message" textWrap="true" />

              <Label row="23" colSpan="2" text="Google Cloud Storage" cssClass="subtitle" />

              <Button row="24" col="0" text="upload file" tap="{{ doUploadFile }}" cssClass="button button-storage" />
              <Button row="24" col="1" text="download file" tap="{{ doDownloadFile }}" cssClass="button button-storage" />
              
              <Button row="25" col="0" text="get download url" tap="{{ doGetDownloadUrl }}" cssClass="button button-storage" />
              <Button row="25" col="1" text="delete file" tap="{{ doDeleteFile }}" cssClass="button button-storage" />

              <Label row="26" colSpan="2" text="Analytics" cssClass="subtitle" />

              <Button row="27" col="0" text="log event" tap="{{ doLogAnayticsEvent }}" cssClass="button button-analytics" />
              <Button row="27" col="1" text="set user property" tap="{{ doSetAnalyticsUserProperty }}" cssClass="button button-analytics" />
            </GridLayout>

          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
    </TabView.items>
  </TabView>
</Page>